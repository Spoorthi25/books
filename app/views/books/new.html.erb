<h1> Displaying the form </h1>
<% if @book.errors.any? %>
<h2>The following errors prevented the book from being saved </h2>
<ul>
<% @book.errors.full_messages.each do |msg| %>
    <li><%= msg %>
    </li>
    <% end %>
    </ul>
    <% end %>
<%= form_with scope: :book, url: books_path, local:true do |f| %>
    <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
    </p>
    <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
    </p>
    <p>
    <%= f.submit %>
    </p>
<% end %>
<%= link_to 'Back to book lists',books_path(@book) %>|
   <%= link_to 'home',root_path(@book) %>



